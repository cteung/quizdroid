<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.washington.cteung.quizdroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="edu.washington.cteung.quizdroid.QuizApp"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".topic_math"
            android:label="@string/title_activity_topic_math" >
        </activity>
        <activity
            android:name=".MainPage"
            android:label="@string/title_activity_overview" >
        </activity>
        <activity
            android:name=".QuestionPage"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name=".SummaryPage"
            android:label="@string/title_activity_summary" >
        </activity>
    </application>

</manifest>
